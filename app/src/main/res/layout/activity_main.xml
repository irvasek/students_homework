<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.Guideline
        android:id="@+id/line_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/line_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/line_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/students_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button_add"
        app:layout_constraintEnd_toStartOf="@+id/line_right"
        app:layout_constraintStart_toEndOf="@+id/line_left"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add"
        app:layout_constraintStart_toEndOf="@id/line_left"
        app:layout_constraintEnd_toStartOf="@id/line_right"
        app:layout_constraintBottom_toTopOf="@id/student_photo"
        />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_delete"
        app:layout_constraintStart_toEndOf="@id/line_left"
        app:layout_constraintBottom_toTopOf="@id/line_bottom"
        />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_save"
        app:layout_constraintEnd_toStartOf="@id/line_right"
        app:layout_constraintBottom_toTopOf="@id/line_bottom"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/student_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@id/line_left"
        app:layout_constraintBottom_toBottomOf="@id/student_first_name"
        android:src="@color/colorGray"/>

    <EditText
        android:id="@+id/student_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/student_photo"
        app:layout_constraintBottom_toTopOf="@id/student_first_name"
        app:layout_constraintEnd_toStartOf="@id/line_right"
        android:hint="@string/last_name"/>

    <EditText
        android:id="@+id/student_first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/student_photo"
        app:layout_constraintBottom_toTopOf="@id/student_gender"
        app:layout_constraintEnd_toStartOf="@id/line_right"
        android:hint="@string/first_name"/>


    <CheckBox
        android:id="@+id/student_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/student_photo"
        app:layout_constraintBottom_toTopOf="@id/button_delete"
        android:text="@string/male"/>

</android.support.constraint.ConstraintLayout>